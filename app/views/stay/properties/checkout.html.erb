<div class="container mt-4">
  <div class="row">
    <!-- Left Section: Booking Details -->
    <div class="col-md-6">
      <div class="card mb-3 p-3">
        <h3 class="card-title">Request to book</h3>
        <div class="alert alert-light border d-flex align-items-center mb-4">
          <i class="bi bi-tag-fill me-2 text-danger"></i>
          <div>
            <strong>Good price.</strong>
            <p class="mb-0">Your dates are ₹520 less than the avg. nightly rate over the last 3 months.</p>
          </div>
        </div>

        <!-- Your trip details -->
        <div class="mb-4">
          <h5>Your trip</h5>
          <div class="d-flex justify-content-between">
            <p class="mb-0">Dates</p>
            <a href="#" class="text-decoration-none">Edit</a>
          </div>
          <p>27 Sep – 2 Oct</p>
          <div class="d-flex justify-content-between">
            <p class="mb-0">Guests</p>
            <a href="#" class="text-decoration-none">Edit</a>
          </div>
          <p>1 guest</p>
        </div>

        <!-- Payment section -->
        <div class="mb-4">
          <h5>Pay with</h5>
          <select class="form-select mb-3" aria-label="Payment method">
            <option selected>Credit or debit card</option>
            <option value="1">PayPal</option>
            <option value="2">Net Banking</option>
          </select>

          <div class="mb-3">
            <label for="cardNumber" class="form-label">Card number</label>
            <input type="text" class="form-control" id="cardNumber" placeholder="Card number">
          </div>
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="expiration" class="form-label">Expiration</label>
              <input type="text" class="form-control" id="expiration" placeholder="MM/YY">
            </div>
            <div class="col-md-6 mb-3">
              <label for="cvv" class="form-label">CVV</label>
              <input type="text" class="form-control" id="cvv" placeholder="CVV">
            </div>
          </div>
          <div class="mb-3">
            <label for="cardName" class="form-label">Cardholder name</label>
            <input type="text" class="form-control" id="cardName" placeholder="Cardholder name">
          </div>
        </div>

        <!-- Additional trip requirements -->
        <div class="mb-3">
          <h5>Required for your trip</h5>
          <div class="mb-3 d-flex justify-content-between align-items-center">
            <div>
              <p class="mb-0">Message the Host</p>
              <small class="text-muted">Let the host know about your trip.</small>
            </div>
            <button class="btn btn-outline-primary btn-sm">Add</button>
          </div>
          <div class="mb-3 d-flex justify-content-between align-items-center">
            <div>
              <p class="mb-0">Profile photo</p>
              <small class="text-muted">Hosts want to know who's staying at their place.</small>
            </div>
            <button class="btn btn-outline-primary btn-sm">Add</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Section: Price Details -->
    <div class="col-md-6">
      <div class="card p-3">
        <div class="d-flex align-items-center mb-3">
          <img src="https://via.placeholder.com/70" alt="Listing image" class="me-3 rounded">
          <div>
            <h6 class="mb-0">Stanza Aragona in Casa delle Api</h6>
            <small class="text-muted">4.87 (186 reviews) · Superhost</small>
          </div>
        </div>
        <hr>

        <div class="mb-3">
          <div class="d-flex justify-content-between">
            <p class="mb-0">₹3,720.47 x 5 nights</p>
            <p class="mb-0">₹18,602.35</p>
          </div>
          <div class="d-flex justify-content-between">
            <p class="mb-0">Cleaning fee</p>
            <p class="mb-0">₹1,860.23</p>
          </div>
          <div class="d-flex justify-content-between">
            <p class="mb-0">Airbnb service fee</p>
            <p class="mb-0">₹3,355.86</p>
          </div>
          <div class="d-flex justify-content-between">
            <p class="mb-0">Taxes</p>
            <p class="mb-0">₹744.09</p>
          </div>
        </div>

        <hr>
        <div class="d-flex justify-content-between fw-bold">
          <p>Total (INR)</p>
          <p>₹24,562.53</p>
        </div>
      </div>
    </div>
  </div>
</div>
