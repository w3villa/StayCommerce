<%= render partial: 'stay/admin/taxons/tabs', locals: {current: :details} %>

<% content_for :page_actions do %>
  <%#= external_page_preview_link(@taxon) %>
<% end %>

<%# Because otherwise the form would attempt to use to_param of @taxon %>
<% form_url = admin_taxonomy_taxon_path(@taxonomy.id, @taxon.id) %>

<%#= render partial: 'stay/admin/shared/error_messages', locals: { target: @taxon } %>

<%= form_for [:admin, @taxonomy, @taxon], method: :put, url: form_url, html: { multipart: true } do |f| %>
  <%= render 'form', f: f %>
   <div class="row">
    <div class="col-md-12">
      <div class="form-group mt-4">
        <%= f.submit @taxon.persisted? ? 'Update Taxon' : 'Create Taxon', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
