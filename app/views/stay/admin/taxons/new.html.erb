<h2>
  <%= link_to 'Taxonomies', admin_taxonomies_url %> /
  <%= link_to @taxonomy.root.name, edit_admin_taxonomy_url(@taxonomy) %> / New
</h2>

<%= render partial: 'stay/admin/shared/error_messages', locals: { resource: @taxon } %>

<%= form_for [:admin, @taxonomy, @taxon] do |f| %>
  <%= render 'form', f: f %>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group mt-4">
        <%= f.submit @taxon.persisted? ? 'Update Taxon' : 'Create Taxon', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
