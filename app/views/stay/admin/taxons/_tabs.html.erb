<% content_for :page_title do %>
  <%= link_to 'Taxonomies', admin_taxonomies_url %> /

  <%= link_to @taxonomy.root.name, edit_admin_taxonomy_url(@taxonomy) %>
  <% unless @taxon.root? %>
    / <%= @taxon.name %>
  <% end %>
<% end %>

<% content_for(:page_tabs) do %>
  <%= content_tag :li, class: 'nav-item' do %>
    <%= link_to_with_icon 'edit.svg',
                          'details',
                          edit_admin_taxonomy_taxon_path(@taxonomy, @taxon.id),
                          class: "nav-link #{'active' if current == :details}" %>

  <% end %>

  <%= content_tag :li, class: 'nav-item' do %>
    <%= link_to_with_icon 'translate.svg',
                          'translations',
                          translations_admin_taxonomy_taxon_path(@taxonomy, @taxon.id),
                          class: "nav-link #{'active' if current == :translations}" %>

  <% end %>
<% end %>
