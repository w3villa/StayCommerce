<div class="container mx-auto p-4">
  <div class="row mt-4 justify-content-center">
    <div class="col-md-8 col-lg-10"> 
      <div class="card">
        <div class="card-header">
          <h2 class="text-xl font-semibold mb-0">Amenity Details</h2> 
        </div>
        <div class="card-body">
          <p><strong>Name: </strong><%= @amenity.name %></p>
          <p><strong>Description: </strong><%= @amenity.description %></p>
          <p><strong>Position: </strong><%= @amenity.position %></p>
          <p><strong>Active: </strong><%= @amenity.active %></p>
          <p><strong>Extra Charge: </strong><%= @amenity.extra_charge %></p>
          <p><strong>Category: </strong><%= @amenity.category %></p>
          <div class="d-flex mt-4 p-4 justify-content-center">  
            <%= link_to 'Edit', edit_admin_amenity_path(@amenity), class: 'btn btn-warning me-3' %> 
            <%= link_to 'Back', admin_amenities_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
