<%= form_with(model: [:admin,  @amenity], local: true) do |f| %>
  <% if @amenity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@amenity.errors.count, "error") %> prohibited this amenity from being saved:</h2>
      <ul>
        <% @amenity.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :name, class:"form-label" %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :description, class:"form-label" %>
        <%= f.text_area :description, class: 'form-control ckeditor' %>
      </div>

    </div>

    <div class="col-md-6">
      <div class="field">
        <%= f.label :position, class:"form-label" %>
        <%= f.number_field :position, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :category, class:"form-label" %>
        <%= f.text_field :category, class: 'form-control' %>
      </div>

       <div class="field">
        <%= f.label :charge, class:"form-label" %>
        <%= f.number_field :charge, class: 'form-control', step: '0.01' %>
      </div>
      
      <div class="field">
        <%= f.label :active, class:"form-label" %>
        <%= f.check_box :active %>
      </div>
      
    </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group mt-4">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
