<%= form_with(model: [:admin,  @room_type], local: true) do |f| %>
  <% if @room_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room_type.errors.count, "error") %> prohibited this room from being saved:</h2>
      <ul>
        <% @room_type.errors.full_messages.each do |message| %>
