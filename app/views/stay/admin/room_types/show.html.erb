<div class="container mx-auto p-4">
  <div class="row mt-4 justify-content-center">
    <div class="col-md-8 col-lg-10"> 
      <div class="card">
        <div class="card-header">
          <h2 class="text-xl font-semibold mb-0">Room Type Details</h2> 
        </div>
        <div class="card-body">
          <p><strong>Name: </strong><%= @room_type.name %></p>
          <p><strong>Description: </strong><%= @room_type.description %></p> 
          <div class="d-flex mt-4 p-4 justify-content-center">  
            <%= link_to 'Edit', edit_admin_room_type_path(@room_type), class: 'btn btn-warning me-3' %> 
            <%= link_to 'Back', admin_room_types_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
