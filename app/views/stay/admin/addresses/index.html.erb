<header class="bg-surface-primary border-bottom pt-6">
<div class="container-fluid">
  <div class="mb-npx pb-5">
      <div class="row align-items-center">
      <div class="col-sm-6 col-12 mb-4 mb-sm-0">
          <!-- Title -->
          <h1 class="h3 mb-0 ls-tight">Dashboard</h1>
      </div>
      <!-- Actions -->
      <div class="col-sm-6 col-12 text-sm-end">
          <div class="mx-n1">
          <a href="#" class="btn d-inline-flex btn-sm btn-neutral mx-1">
              <span class=" pe-2">
              <i class="bi bi-pencil"></i>
              </span>
              <span>Edit</span>
          </a>
          <%= link_to new_admin_address_path, class:"btn d-inline-flex btn-sm btn-primary mx-1" do %>
              <span class=" pe-2">
              <i class="bi bi-plus"></i>
              </span>
              <span>Create</span>
          <%end%>
          </div>
      </div>
      </div>
  </div>
</div>
</header>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Zipcode</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.address1 %></td>
        <td><%= address.address2 %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.country %></td>
        <td><%= address.zipcode %></td>
        <td><%= address.longitude %></td>
        <td><%= address.latitude %></td>
        <td><%= link_to 'Show', [:admin, address] %></td>
        <td><%= link_to 'Edit', [:admin, address] %></td>
        <td><%= link_to 'Destroy', [:admin, address], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Address', new_admin_address_path %>
