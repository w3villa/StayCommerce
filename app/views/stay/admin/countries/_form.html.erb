<%= form_with(model: [:admin,  @country], local: true) do |f| %>
  <% if @country.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@country.errors.count, "error") %> prohibited this room from being saved:</h2>
      <ul>
        <% @country.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :name, class:"form-label" %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :iso_name, class:"form-label" %>
        <%= f.text_field :iso_name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :iso_alpha_2, class:"form-label" %>
        <%= f.text_field :iso, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :iso_alpha_3, class:"form-label" %>
        <%= f.text_field :iso3, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="field">
      <%= f.label :states_required, class:"form-label" %>
      <%= f.check_box :states_required %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group mt-4">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>

