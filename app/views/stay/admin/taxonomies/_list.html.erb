<div class="table-responsive border rounded bg-white">
  <table class="table sortable" id='listing_taxonomies' data-hook data-sortable-link="<%#= update_positions_admin_taxonomies_url %>">
    <thead class="text-muted">
      <tr data-hook="taxonomies_header">
        <th class="no-border handel-head"></th>
        <th>Name</th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody id="sortVert">
      <% @taxonomies.each do |taxonomy| %>
        <tr id="<%= taxonomy %>" data-hook="taxonomies_row">
          <td class="move-handle">
            <%= svg_icon name: "grip-vertical.svg", width: '18', height: '18' %>
          </td>
          <td><%= taxonomy.name %></td>
          <td class="actions">
            <span class="d-flex justify-content-end">

            <%= link_to edit_admin_taxonomy_path(taxonomy), class: 'btn d-inline-flex btn-sm btn-neutral mx-1' do %>
              <i class="bi bi-pencil">Edit</i>
            <% end %>  
            <%= button_to admin_taxonomy_path(taxonomy), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-sm btn-neutral mx-1 text-danger-hover' do %>
              <i class="bi bi-trash">Destroy</i>
            <% end %>                
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
