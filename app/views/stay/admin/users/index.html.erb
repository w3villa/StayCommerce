<h1>Users</h1>

<%= link_to 'New User', new_admin_user_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>phone</th>
      <th>DOB</th>
      <th>gender</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.phone %></td>
        <td><%= user.date_of_birth %></td>
        <td><%= user.gender %></td>
        <td>
          <%= link_to 'Show', admin_user_path(user), class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-warning' %>
          <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
