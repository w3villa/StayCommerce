<div class="container mx-auto p-4">
  <div class="row mt-4 justify-content-center">
    <div class="col-md-8 col-lg-10"> 
      <div class="card">
        <div class="card-header">
          <h2 class="text-xl font-semibold mb-0">Property Details</h2> 
        </div>
        <div class="card-body">
          <p><strong>Image: </strong><%= image_tag main_app.url_for(@property.images.first), size: "60x60" if @property.images.attached? %></p> 
          <p><strong>Active: </strong><%= @property.active %></p>
          <p><strong>Title: </strong><%= @property.title %></p>
          <p><strong>Description: </strong><%= @property.description %></p>
          <p><strong>Availability Start: </strong><%= @property.availability_start %></p>
          <p><strong>Availability End: </strong><%= @property.availability_end %></p>
          <div class="d-flex mt-4 p-4 justify-content-center">  
            <%= link_to 'Edit', edit_admin_property_path(@property), class: 'btn btn-warning me-3' %> 
            <%= link_to 'Back', admin_properties_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
