<h1>Properties</h1>

<%= link_to 'New Property', new_admin_property_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Active</th>
      <th>Title</th>
      <th>Description</th>
      <th>Availability Start</th>
      <th>Availability End</th>
      <th>User</th>
      <th>Room</th>
      <th>Address</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.active %></td>
        <td><%= property.title %></td>
        <td><%= property.description %></td>
        <td><%= property.availability_start %></td>
        <td><%= property.availability_end %></td>
        <td><%= property.user_id %></td>
        <td><%= property.room_id %></td>
        <td><%= property.address_id %></td>
        <td><%= link_to 'Show', admin_property_path(property), class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_admin_property_path(property), class: 'btn btn-primary' %></td>
        <td>
          <%= link_to 'Destroy', admin_property_path(property), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
