<%= form_with(model: [:admin, property], local: true) do |f| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>
      <ul>
        <% property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :title, '*Title (mandatory)', class:"form-label" %>
        <%= f.text_field :title, required: true, class: 'form-control' %>
      </div>
    </div>


    <div class="col-md-6">
      <div class="field">
        <%= f.label :description, class:"form-label" %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :ctaegory, '*Category (mandatory)', class:"form-label" %>
        <%= f.select :property_category_id, Stay::PropertyCategory.all.collect { |pc| [pc.name, pc.id] }, { include_blank: 'None' }, class: 'form-control', required: true %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="field">
        <%= f.label :room_type, 'Room Type (auto-filled)', class: "form-label" %>
        <% selected_category = Stay::PropertyCategory.find_by(id: property.property_category_id) %>
        <%= f.text_field :room_type_id, value: selected_category&.room_type_id, readonly: true, class: 'form-control' %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :city, class: "form-label" %>
        <%= f.text_field :city, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="field">
        <%= f.label :address, class:"form-label" %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :guest_no, class: "form-label" %>
        <%= f.number_field :guest_number, required: true, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="field">
        <%= f.label :country_id, 'Select Country' %>
        <%= f.select :country_id, options_from_collection_for_select(Stay::Country.all, :id, :name, property.country_id), { include_blank: 'Select Country' }, id: 'country_select', class: 'form-control custom-select-box' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="field">
        <%= f.label :active, class:"form-label" %>
        <%= f.check_box :active %>
      </div>
    </div>

    <%# <div class="col-md-6"> %>
      <%# <div class="field"> %>
        <%#= label_tag :cancellation_policy, 'Select Country' %>
        <%#= select_tag :cancellation_policy_id, options_from_collection_for_select(Stay::CancellationPolicy.all, :id, :name), class: 'form-control' %>
      <%# </div> %>
    <%# </div> %>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group mt-4">
        <%= hidden_field_tag :step, 'description' %>
        <%= f.submit 'continue', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
