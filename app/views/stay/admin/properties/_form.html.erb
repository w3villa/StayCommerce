<%= form_with(model: [:admin, property], local: true) do |f| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>
      <ul>
        <% property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :title, '*Title (mandatory)', class:"form-label" %>
        <%= f.text_field :title, required: true, class: 'form-control' %>
      </div>
    </div>


    <div class="col-md-6">
      <div class="field">
        <%= f.label :description, class:"form-label" %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :category, '*Category (mandatory)', class:"form-label" %>
        <%= f.select :property_category_id, Stay::PropertyCategory.all.collect { |pc| [pc.name, pc.id] }, { include_blank: 'None' }, class: 'form-control custom-select-box', id: 'property_category_select', onchange: 'updateRoomType(this.value)', required: true %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="field">
        <%= f.label :property_type, class:"form-label" %>
        <%= f.select :property_type_id, Stay::PropertyType.all.collect { |rt| [rt.name, rt.id] }, { include_blank: 'Select Property Type' }, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :city, class: "form-label" %>
        <%= f.text_field :city, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="field">
        <%= f.label :address, class:"form-label" %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :taxon_ids, 'Taxons', class:"form-label" %>
        
        <%= f.select :taxon_ids, 
                      options_from_collection_for_select(Stay::Taxon.all, :id, :pretty_name, @property.taxon_ids),
                      { include_hidden: true },
                      multiple: true, class: 'select2 form-control',
                      data: { 
                        autocomplete_url_value: 'taxons_api_v2',
                        autocomplete_return_attr_value: 'pretty_name',
                        autocomplete_multiple_value: true 
                      } %>
        <% if Stay::Taxon.none? %>
          <div class="alert alert-info">No Resouce Found.</div>
        <% end %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="field">
        <%= f.label :guest_no, class: "form-label" %>
        <%= f.number_field :guest_number, required: true, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="field">
        <%= f.label :country, 'Select Country' %>
        <%= f.text_field :country, value: property.country, required: true, class: "form-control" %>
        <%#= f.select :country_id, options_from_collection_for_select(Stay::Country.all, :id, :name, property.country_id), { include_blank: 'Select Country' }, id: 'country_select', class: 'form-control custom-select-box' %>
      </div>
    </div>
  </div> 

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :images, "Upload Images", class:"form-label" %>
        <%= f.file_field :images, multiple: true, class:"form-control" %>
      </div>
    </div>
    
     <div class="col-md-6">
      <div class="field">
        <%= f.label :active, class:"form-label mt-10" %>
        <%= f.check_box :active %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="field">
        <%= f.label :instant_booking, class:"form-label" %>
        <%= f.check_box :instant_booking %>
      </div>
    </div>

    <%# <div class="col-md-6"> %>
      <%# <div class="field"> %>
        <%#= label_tag :cancellation_policy, 'Select Country' %>
        <%#= select_tag :cancellation_policy_id, options_from_collection_for_select(Stay::CancellationPolicy.all, :id, :name), class: 'form-control' %>
      <%# </div> %>
    <%# </div> %>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group mt-4">
        <%= hidden_field_tag :step, 'description' %>
        <%= f.submit 'continue', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
