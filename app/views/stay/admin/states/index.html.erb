<div class="card mb-7">
  <div class="card-header">
    <div class="row align-items-center">
      <div class="col-sm-6 col-12 mb-4 mb-sm-0">
          <!-- Title -->
          <h1 class="h3 mb-0 ls-tight">States</h1>
      </div>
      <!-- Actions -->
      <div class="col-sm-6 col-12 text-sm-end">
          <div class="mx-n1">
          <%= link_to '#', class:"btn d-inline-flex btn-sm btn-primary mx-1" , id: 'add-new-state' do %>
              <span class=" pe-2">
              <i class="bi bi-plus"></i>
              </span>
              <span>Create New State</span>
          <%end%>
          </div>
      </div>
    </div>  
  <%= form_with url: admin_country_states_path(@country), method: :get, local: true do %>
    <div class="form-group">
      <%= label_tag :country_id, 'Select Country' %>
      <%= select_tag :country_id, options_from_collection_for_select(Stay::Country.all, :id, :name), id: 'country-select', class: 'form-control' %>
    </div>
  <% end %>
  </div>


  <div class="table-responsive" id="statesContainer">
    <table class="table table-hover table-nowrap">
      <thead class="table-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Abbreviation</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <td><%= state.abbr %></td>
        <td class="text-end d-flex justify-content-end">
          <%= link_to edit_admin_country_state_path(@country, state), class: 'btn d-inline-flex btn-sm btn-neutral mx-1' do %>
            <i class="bi bi-pencil">Edit</i>
          <% end %>  
          <%= button_to admin_country_state_path(@country, state), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-sm btn-neutral mx-1 text-danger-hover' do %>
            <i class="bi bi-trash">Destroy</i>
          <% end %>                
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

  <div class="card-footer border-0 py-5">
    <span class="text-muted text-sm">Showing 10 items out of 250 results found</span>
  </div>
</div>  



