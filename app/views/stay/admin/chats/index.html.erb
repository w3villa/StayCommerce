<h1>Chats</h1>

<%= link_to 'New Chat', new_admin_chat_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Property</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.sender_id %></td>
        <td><%= chat.receiver_id %></td>
        <td><%= chat.property_id %></td>
        <td><%= link_to 'Show', admin_chat_path(chat), class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_admin_chat_path(chat), class: 'btn btn-primary' %></td>
        <td>
          <%= link_to 'Destroy', admin_chat_path(chat), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
