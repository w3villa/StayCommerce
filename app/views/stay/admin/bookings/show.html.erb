<div class="container mx-auto p-4">
  <div class="row mt-4 justify-content-center">
    <div class="col-md-8 col-lg-10"> 
      <div class="card">
        <div class="card-header">
          <h2 class="text-xl font-semibold mb-0">Booking Details</h2> 
        </div>
        <div class="card-body">
          <p><strong>Total Rooms: </strong><%= @booking.room_count %></p>
          <p><strong>Check In Date: </strong><%= @booking.check_in_date %></p>
          <p><strong>Check Out Date: </strong><%= @booking.check_out_date %></p>
          <p><strong>Number of Guests: </strong><%= @booking.number_of_guests %></p>
          <p><strong>Status: </strong><%= @booking.status %></p>
          <div class="d-flex mt-4 p-4 justify-content-center">  
            <%= link_to 'Edit', edit_admin_booking_path(@booking), class: 'btn btn-warning me-3' %> 
            <%= link_to 'Back', admin_bookings_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
