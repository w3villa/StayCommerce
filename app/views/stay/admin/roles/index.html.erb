<h1>Roles</h1>

<div class="mb-3">
  <%= link_to 'New Role', new_admin_role_path, class: 'btn btn-success' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= link_to 'Show', admin_role_path(role), class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_admin_role_path(role), class: 'btn btn-warning' %></td>
        <td>
          <%= link_to 'Destroy', admin_role_path(role), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

