<h1>Messages</h1>

<%= link_to 'New Message', new_admin_message_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Body</th>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Chat</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.body %></td>
        <td><%= message.sender_id %></td>
        <td><%= message.receiver_id %></td>
        <td><%= message.chat_id %></td>
        <td><%= link_to 'Show', admin_message_path(message), class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_admin_message_path(message), class: 'btn btn-primary' %></td>
        <td>
          <%= link_to 'Destroy', admin_message_path(message), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
