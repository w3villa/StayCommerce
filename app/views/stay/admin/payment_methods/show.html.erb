<div class="container mx-auto p-4">
  <div class="row mt-4 justify-content-center">
    <div class="col-md-8 col-lg-10"> 
      <div class="card">
        <div class="card-header">
          <h2 class="text-xl font-semibold mb-0">Payment Method Details</h2> 
        </div>
        <div class="card-body">
          <p><strong>Name: </strong> <%= @payment_method.name %></p> 
          <div class="d-flex mt-4 p-4 justify-content-center">  
            <%= link_to 'Edit', edit_admin_payment_method_path(@payment_method), class: 'btn btn-warning me-3' %> 
            <%= link_to 'Back', admin_payment_methods_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
