<h1>Payments</h1>

<%= link_to 'New Payment', new_admin_payment_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Booking</th>
      <th>Payment Method</th>
      <th>Amount</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.booking_id %></td>
        <td><%= payment.payment_method_id %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.status %></td>
        <td><%= link_to 'Show', admin_payment_path(payment), class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_admin_payment_path(payment), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', admin_payment_path(payment), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
