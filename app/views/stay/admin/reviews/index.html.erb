<h1>Reviews</h1>

<%= link_to 'New Review', new_admin_review_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Booking</th>
      <th>Rating</th>
      <th>Comment</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.booking_id %></td>
        <td><%= review.rating %></td>
        <td><%= review.comment %></td>
        <td><%= link_to 'Show', admin_review_path(review), class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_admin_review_path(review), class: 'btn btn-primary' %></td>
        <td>
          <%= link_to 'Destroy', admin_review_path(review), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
