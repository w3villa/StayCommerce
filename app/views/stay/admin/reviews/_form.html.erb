<%= form_with(model: [:admin, review], local: true) do |f| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>
      <ul>
        <% review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <%= f.label :booking_id %>
     <%= f.number_field :booking_id, class: 'form-control' %>
    </div>

    <div class="col-md-6">
     <%= f.label :rating %>
     <%= f.number_field :rating, class: 'form-control' %>
    </div>

  </div>

  <div class="row">
    <div class="col-md-6">
     <%= f.label :comment %>
     <%= f.text_field :comment, class: 'form-control' %>
    </div>

  </div>

  <div class="form-group mt-4">
    <%= f.submit review.persisted? ? 'Update' : 'Create', class: 'btn btn-primary' %>
  </div>
<% end %>
