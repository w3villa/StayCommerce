<div class="container mx-auto p-4">
  <div class="row mt-4 justify-content-center">
    <div class="col-md-8 col-lg-10"> 
      <div class="card">
        <div class="card-header">
          <h2 class="text-xl font-semibold mb-0">Review Details</h2> 
        </div>
        <div class="card-body">
          <p><strong>Booking ID: </strong><%= @review.booking_id %></p> 
          <p><strong>Rating: </strong><%= @review.rating %></p>
          <p><strong>Comment: </strong><%= @review.comment %></p>
          <div class="d-flex mt-4 p-4 justify-content-center">  
            <%= link_to 'Edit', edit_admin_review_path(@review), class: 'btn btn-warning me-3' %> 
            <%= link_to 'Back', admin_reviews_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
