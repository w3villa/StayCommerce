    <div class="container booking-container">
        <h1 class="mb-4"><a href="#" class="text-dark text-decoration-none"></a>Confirm and pay</h1>
        
        <div class="row">
            <div class="col-md-7">
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title">Your trip</h2>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h6 class="mb-0">Dates</h6>
                                <p class="mb-0">@booking.check_in_date - @booking.check_out_date</p>
                            </div>
                            <a href="#" class="edit-link">Edit</a>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0">Guests</h6>
                                <p class="mb-0">@booking.number_of_guests</p>
                            </div>
                            <a href="#" class="edit-link">Edit</a>
                        </div>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-body">
                    <%= form_with url: property_booking_payments_path(@property, @booking), local: true, method: :post, id: 'payment-form' do %>
                        <div class="mb-3">
                            <div class="form-group">
                                <label for="amount">Amount</label>
                                <input type="text" name="amount" id="amount" value="<%= @booking.total %>" required>
                            </div>
                        </div>

                        <h2 class="card-title mb-4">Pay with</h2>
                        <div class="mb-3">
                            <div class="form-group">
                                <label for="payment_method">Payment Method</label>
                                <select id="payment_method" name="payment_method_id" required>
                                <!-- Options will be populated by JavaScript -->
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-group">
                                <label for="card-element">Card Details</label>
                                <div id="card-element"><!-- A Stripe Element will be inserted here. --></div>
                                <div id="card-errors" class="error"></div>
                            </div>
                        </div>
                        <button ,class: "btn btn-sm btn-danger w-full w-lg-auto me-2", type="submit">Pay</button>
                    <%end%>
                    </div>
                </div>  
            </div>
            
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <img src="/api/placeholder/400/200" alt="Room" class="room-image mb-3">
                        <h5 class="card-title">Camus Room, Parisian Charm</h5>
                        <p class="card-text">Room in townhouse</p>
                        <p class="card-text">
                            <small class="text-muted">
                                <span class="fa fa-star"></span> 4.65 (190 reviews) • Superhost
                            </small>
                        </p>
                        
                        <h3 class="mt-4">Price details</h3>
                        <div class="d-flex justify-content-between mb-2">
                            <span>₹6,901.55 x 9 nights</span>
                            <span>₹62,113.95</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Cleaning fee</span>
                            <span>₹4,920.84</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Taxes</span>
                            <span>₹2,172.59</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <strong>Total (INR)</strong>
                            <strong>₹69,207.38</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>