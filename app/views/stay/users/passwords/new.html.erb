<div class="px-5 py-5 p-lg-0">
  <div class="d-flex justify-content-center">
    <div class="col-12 col-md-9 col-lg-7 d-flex flex-column justify-content-center py-lg-16 px-lg-20 position-relative">
      <div class="row">
        <div class="col-lg-10 col-md-9 col-xl-7 mx-auto">
          <div class="text-center mb-12">
            <h1 class="ls-tight font-bolder h2">
              Forgot your password?
            </h1>
          </div>
          <%= form_for(resource, as: resource_name, url: user_password_path(resource_name), html: { class: "form", method: :post }) do |f| %>
            <%= render "stay/users/shared/error_messages", resource: resource %>
            <div class="mb-5">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "Your email address", autocomplete: "email" %>
            </div>
            <div>
              <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-full" %>
            </div>
          <% end %>
          <div class="my-6">
            <%= render "stay/users/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>