<!DOCTYPE html>
<html>
<head>
  <title>Stay</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Bootstrap CSS -->

  <%= stylesheet_link_tag 'stay/application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link href="https://unpkg.com/@webpixels/css@1.2.6/dist/index.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
  <%= render 'stay/admin/shared/header' %>
  <div class="d-flex flex-column flex-lg-row h-lg-full bg-surface-secondary">
    <!-- Vertical Navbar -->
    <%= render 'stay/admin/shared/sidebar' %>

  <!-- Main content -->
  <div class="h-screen flex-grow-1 overflow-y-lg-auto">
    <main class="bg-surface-secondary">
      <div class="">
        <!-- Yield content here -->
        <%= yield %>
        <%#= render 'stay/admin/shared/common-table' %>
      </div>
    </main>
  </div>
</div>
</body>
</html>
